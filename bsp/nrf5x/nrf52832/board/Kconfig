                        range 0 47
                        default 18
                    config BSP_USING_PWM0_CH2
                        int "PWM0 channel 2 pin number set"
                        range 0 47
                        default 19
                    config BSP_USING_PWM0_CH3
                        int "PWM0 channel 3 pin number set"
                        range 0 47
                        default 20
                endif
                config BSP_USING_PWM1
