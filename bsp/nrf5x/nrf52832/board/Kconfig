                    int "i2c1 scl pin number"
                    range 0 31
                    default 3
                config BSP_I2C1_SDA_PIN
                    int "I2C1 sda pin number"
                    range 0 31
                    default 2
            endif
        endif
        
    config BSP_USING_SPI
        bool "Enable SPI"
        select RT_USING_PIN
        default y

        if BSP_USING_SPI
            config NRFX_SPI_ENABLED
            int 
            default 1
            config BSP_USING_SPI0
                bool "Enable SPI0 bus"
                default y
