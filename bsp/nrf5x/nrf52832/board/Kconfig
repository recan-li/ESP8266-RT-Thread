                int 
                default 1
            endif
            config BSP_USING_TIM3
                bool "Enable TIMER3"
                default n
            if BSP_USING_TIM3
                config NRFX_TIMER3_ENABLED
                int 
                default 1
            endif

            config BSP_USING_TIM4
                bool "Enable TIMER4"
                default n
            if BSP_USING_TIM4
                config NRFX_TIMER4_ENABLED
                int 
                default 1
            endif
        endif
